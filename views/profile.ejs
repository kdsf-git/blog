<!DOCTYPE html>
<html>
<head>
    <title>User Profile</title>
</head>
<body>
<div class="container">
    <h1>User Profile</h1>

    <div class="user-info">
        <h2><%= user.username %></h2>
        <p><%= user.bio %></p>
    </div>

    <h2>Published Posts</h2>
    <ul class="post-list">
        <% posts.forEach(function(post) { %>
            <li>
                <a href="/post/<%= post._id %>"><%= post.title %></a>
            </li>
        <% }); %>
    </ul>
</div>

</body>
</html>
