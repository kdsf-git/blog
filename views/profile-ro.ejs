<%- include ('./layout.ejs') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>User Profile: <%= user.username %></h2>
        <p>Email: <%= u.email %></p>
        <p>Bio: <%= user.bio %></p>
        <h3>Published Posts</h3>
        <ul>
            <% user.publishedPosts.forEach(post => { %>
                <li><a href="/post/<%= post._id %>"><%= post.title %></a></li>
            <% }) %>
        </ul>
    </div>
</div>

</body>

</html>