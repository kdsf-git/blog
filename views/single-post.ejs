<% var head = () => { %>
    <title><%= post.title %></title>
<% } -%>

<% var body = () => { %>
<div class="container">
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>
    <p>Keywords: <%= post.keywords %></p>
    <p>Author: <%= post.username %></p>
    <p>Views: <%= post.views %></p>
    <ul>
	<% comments.forEach(function(comment) { %>
	    <li>
		    <p><%= comment.username %></p>
		    <p><%= comment.content %></p>
	    </li>
	<% }); %>
    </ul>
</div>
<% } -%>
