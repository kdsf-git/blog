<%- include('./htmlTop.ejs') %>
    <title><%= post.title %></title>

<%- include('./htmlMiddle.ejs') %>

<div class="container">
	<form method="POST" action="/post/<%= post.id %>/edit">
		<label for="title">Title: </label>
		<input type="text" name="title" id="title" value="<%= post.title %>">
		<label for="content">Content: </label>
		<input type="text" name="content" id="content" value="<%= post.content %>">
		<label for="keywords">Keywords: </label>
		<input type="text" name="keywords" id="keywords" value="<%= post.keywords %>">
		<button type="submit">Save Changes</button>
	</form>
</div>

<%- include('./htmlBottom.ejs') %>
